@{
}
@model Message
@{
    ViewData["Title"] = "Conversation with " + Model.Sender.FirstName;
}
<h2>@ViewData["Title"]</h2>
<section class="thread-box">
    <section class="">
        @if (Model != null)
        {
            foreach (Message message in ViewBag.Messages)
            {
                if (ViewBag.UserId == message.SenderId)
                {
                    <article class="message right-align">
                        <h4>@message.Sender.FirstName</h4>
                        <p>@Model.Text</p>
                    </article>
                }
                else
                {
                    <article class="message">
                        <h4>@message.Sender.FirstName</h4>
                        <p>@Model.Text</p>
                    </article>
                }
            }
        }
    </section>
    <section class="message-box">
        <form asp-controller="Message" asp-action="Create" method="post">
            <textarea asp-for="Text" class="text-box" rows="4" placeholder="Send Message"></textarea>
            <input asp-for="SenderId" hidden />
            <input asp-for="ReceiverId" hidden />
            <input type="submit" class="btn btn-primary" value="Send" />
        </form>
    </section>
</section>
